{
  "manifest_version": 2,

  "name": "LaGirafe",
  "description": "LaGirafe is a tool for developers, it will store your login for a Umbraco backoffice user and with just a click, LaGirafe - magic.",
  "homepage_url": "https://github.com/StefanBols/LaGirafe",
  "version": "1.3",
  "browser_action": {
    "default_title": "LaGirafe"
  },
  "options_page": "options/options.html",


  "background": {
    "scripts": [
      "scripts/load.js"
    ],
    "persistent": true
  },

  "permissions": [
    "https://*/*",
    "http://*/*",
    "activeTab",
    "storage"
  ],

  "icons": {
    "16": "graphics/icons/icon-16.png",
    "48": "graphics/icons/icon-48.png",
    "128": "graphics/icons/icon-128.png",
    "300": "graphics/icons/icon.png"
  }
}